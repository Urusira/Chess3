<Window x:Class="GameUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Chess 3" Width="800" SizeToContent="Height"
        Icon="Assets/icon.png"
        WindowStartupLocation="CenterScreen"
        Background="#202020">
    <Viewbox>
        <Grid x:Name="BoardGrid" Width="600" Height="600">
            <Grid.Background>
                <ImageBrush ImageSource="Assets/Board.png"  />
            </Grid.Background>

            <UniformGrid x:Name="HighlightGrid" Rows="8" Columns="8">
            </UniformGrid>

            <UniformGrid x:Name="PieceGrid" Rows="8" Columns="8">
                <Image Source="Assets/BishopW.png" />
                <Image Source="Assets/BishopW.png" />
                <Image Source="Assets/BishopW.png" />
                <Image Source="Assets/BishopW.png" />
                <Image Source="Assets/BishopW.png" />
                <Image Source="Assets/BishopW.png" />
                <Image Source="Assets/BishopW.png" />
                <Image Source="Assets/BishopW.png" />
                <Image Source="Assets/BishopW.png" />
                <Image Source="Assets/BishopW.png" />
                <Image Source="Assets/BishopW.png" />
                <Image Source="Assets/BishopW.png" />
                <Image Source="Assets/BishopW.png" />
                <Image Source="Assets/BishopW.png" />
                <Image Source="Assets/BishopW.png" />
                <Image Source="Assets/BishopW.png" />
            </UniformGrid>
        </Grid>
    </Viewbox>
</Window>
